#!/bin/sh

if [ "$help" != "1" ]
then

	pkg-config libdv 2> /dev/null
	disable_libdv=$?

	if [ "$disable_libdv" == "0" ]
	then
		echo "libdv			libmltdv$LIBSUF" >> ../producers.dat
		echo "libdv			libmltdv$LIBSUF" >> ../consumers.dat
	else
		echo "- libdv not found: disabling"
		touch ../disable-dv
	fi

fi

